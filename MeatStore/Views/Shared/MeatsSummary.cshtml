@model Meat

<div class="col col-lg-4 col-md-4 col-sm-4">
    <div class="card">
        <img class="card-img-top" src="@Model.ImageThumbnailUrl" alt="">
        <div class="card-body">
            <h3>@Model.Name</h3>
            <p class="card-text">@Model.ShortDescription</p>
        </div>
        <div class="card-footer">
            <h3 class="pull-right">@Model.Price.ToString("C")</h3>
        </div>
    </div>
</div>